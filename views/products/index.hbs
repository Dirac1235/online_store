{{#> app}}
{{#*inline "content"}}
<div class="container">
  <h1 class="mb-4">Products</h1>
  <div class="row">
    {{#each viewData.products}}
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <img src="/uploads/{{getImage}}" class="card-img-top" alt="{{getName}}">
        <div class="card-body">
          <h5 class="card-title">{{getName}}</h5>
          <p class="card-text">{{getDescription}}</p>
          <a href="/products/{{getId}}" class="btn btn-primary">Buy Now</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{/inline}}
{{/app}}
