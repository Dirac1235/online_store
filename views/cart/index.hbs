{{#> app}}
{{#*inline "content"}}
  <div class="container mt-5">
<div class="card">
  <div class="card-header text-lg   ">
    Products in Cart
  </div>
  <div class="card-body">
    {{#if viewData.productsInCart.length}}
    <div class="table-responsive">
      <table class="table table-bordered table-striped text-center">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          {{#each viewData.productsInCart}}
          <tr>
            <td>{{getId}}</td>
            <td><img src="/uploads/{{getImage}}" alt="{{getName}}" class="img-thumbnail" style="max-width: 100px;"></td>
            <td>{{getName}}</td>
            <td>${{getPrice}}</td>
            <td>{{lookup ../session.products id}}</td>
            <td>${{multiply (getPrice) (lookup ../session.products id)}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col-12 text-end">
        <p><b>Total to pay:</b> ${{viewData.total}}</p>
        <a href="/cart/purchase" class="btn bg-primary text-white mb-2">Purchase</a>
        <a href="/cart/delete" class="btn btn-danger mb-2">Remove all products from Cart</a>
      </div>
    </div>
    {{else}}
    <p class="text-center">Your cart is empty. <a href="/products">Continue shopping</a>.</p>
    {{/if}}
  </div>
  </div>
</div>
{{/inline}}
{{/app}}
