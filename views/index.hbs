{{#> app}}
{{#*inline "content"}}
  <section class="bg-primary text-white p-5 text-center">
      <div class="container">
        <h1>Welcome to Our Online Store!</h1>
        <p>Find the best deals on the latest products</p>
        <a href="/products" class="btn btn-light btn-lg">Shop Now</a>
      </div>
    </section>
<main class="container ">
  <!-- Hero Section -->

  <!-- Featured Products -->
  <h2 class="text-center mt-5 mb-4">Featured Products</h2>
  <div class="row mb-5">
    {{#each viewData.products}}
    <div class="col-md-4">
      <div class="card">
        <img src="/uploads/{{getImage}}"  class="card-img-top img-thumbnail @media" style="max-height: 20rem; min-height:20rem;"
          alt="Product 1">
        <div class="card-body">
          <h5 class="card-title">{{getName}}</h5>
          <p class="card-text">{{getDescription}}</p>
          <a href="/products/{{getId}}" class="btn btn-primary">Buy Now</a>
        </div>
      </div>
    </div>
    {{/each}}
    
  </div>
</main>



{{/inline}}
{{/app}}